<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image">
<meta property="twitter:url" content="http://madewith.glitch.me/">
<meta property="twitter:title" content="MadeWithGlitch.me">
<meta property="twitter:description" content="A showcase of projects made on the simple online coding platform, Glitch!">
